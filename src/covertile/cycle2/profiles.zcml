<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:genericsetup="http://namespaces.zope.org/genericsetup"
    xmlns:i18n="http://namespaces.zope.org/i18n"
    xmlns:zcml="http://namespaces.zope.org/zcml"
    i18n_domain="covertile.cycle2">

  <genericsetup:registerProfile
      name="default"
      title="covertile.cycle2: Instalação do Pacote"
      directory="profiles/default"
      description="Instala o pacote covertile.cycle2 dentro de um portal Plone"
      provides="Products.GenericSetup.interfaces.EXTENSION"
      i18n:attributes="title; description"
      />

  <genericsetup:registerProfile
      name="uninstall"
      title="covertile.cycle2: Remoção do Pacote"
      directory="profiles/uninstall"
      description="Remove o pacote covertile.cycle2 de dentro de um portal Plone"
      provides="Products.GenericSetup.interfaces.EXTENSION"
      i18n:attributes="title; description"
      />

  <utility
      factory=".config.HiddenProfiles"
      name="covertile.cycle2"
      />

</configure>
